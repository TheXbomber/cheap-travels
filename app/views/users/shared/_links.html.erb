<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-secondary", style:"margin-bottom: 5%" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-secondary", style:"margin-bottom: 5%" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-secondary", style:"margin-bottom: 5%" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "btn btn-secondary", style:"margin-bottom: 5%" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "btn btn-secondary", style:"margin-bottom: 5%" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <h3 style="margin: auto; text-align: center">Sign in with</h3><br>
  <div class="d-flex flex-row" style="margin: auto; text-align: center; width: fit-content; align-items: center">
    <%- resource_class.omniauth_providers.each do |provider| %>
      <% pretty_provider = provider.to_s == 'google_oauth2' ? "Google": provider %>
      <% puts "PP: #{pretty_provider}" %>
      <% if pretty_provider == "Google" %>
        <% img = "google.png" %>
      <% elsif pretty_provider.to_s == "facebook" %>
        <% img = "facebook.png" %>
      <% elsif pretty_provider.to_s == "instagram" %>
        <% img = "instagram.png" %>
      <% end %>
      <div>
        <%= button_to "#{image_tag("#{img}", size:"50")}".html_safe, omniauth_authorize_path(resource_name, provider), method: :post, style:"border: none; margin-left: 3vw; background-color: white; margin-right: 3vw" %>
      </div>
    <% end %>
  </div>
<% end %>
