<!-- Modal cambio ricerca -->
<div class="modal fade" id="ricercaModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-target="ricercaModal">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
    <%= form_with scope: "search", url: "/results", method: :post do |form| %>  
      <div class="modal-header">
        <h6 class="modal-title" id="exampleModalLabel">Modifica parametri di ricerca</h6>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <div id="ricerca">
            
             <%= form.text_field :origin, value: params["search"]["origin"] %><br>
              <%= form.date_field :departure, value: params["search"]["departure"] %><br>
              <%= form.text_field :budget, value: params["search"]["budget"] %><br>
              <%= form.number_field :people, in: 1.0..10.0, step: 1.0, value: params["search"]["people"] %><br>
               
      </div>
      </div>
      <div class="modal-footer">
        <%= form.submit :search, class:"btn btn-primary", value: "Cerca" %>	
      </div>
      <%end%>
    </div>
  </div>
</div>



