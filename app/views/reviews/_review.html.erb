<div id="<%= dom_id review %>">
  
  <% unless @hide_user %>   <!-- Nasconde nome utente nel profilo -->
    <strong>User:</strong>
    <%= review.user.name %><br>
  <% end %>

  <strong>Place:</strong>
  <%= review.place %><br>

  <strong>Rating:</strong>
  <%= review.rating %><br>
  <!--<%rating=review.rating %>
  <%(1..rating).each do |i|%>
    <img src="/star-on.png">
  <%end%>
  <%rating=5-rating%>
  <%if rating>0%>
    <%(1..rating).each do |i|%>
      <img src="/star-off.png">
    <%end%>
  <%end%>-->
  <strong>Body:</strong>
  <%= review.body %><br>

  <strong>Data:</strong>
  <%=review.created_at%>

  <% if user_signed_in? %>
    <br>
    <%if review.user.name==current_user.name || current_user.role=="moderator" || current_user.role=="admin" %>
      <div class="d-flex flex-row">
        <%= link_to "Edit", edit_review_path(review), class: "btn btn-secondary", style: "margin-right: 1%" %>
        <%= button_to "Delete", review, method: :delete, class: "btn btn-danger" %>
      </div>
    <%end%>
  <% end %>
</div>